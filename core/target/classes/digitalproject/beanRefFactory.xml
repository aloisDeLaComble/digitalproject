<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
  default-lazy-init="true">

  <bean
    id="digitalproject-model-context"
    class="org.springframework.context.support.ClassPathXmlApplicationContext"
    lazy-init="true">
    <constructor-arg>
      <list>
        <value>org/jspresso/framework/application/commons.xml</value>
        <value>org/jspresso/framework/tools/mock.xml</value>
        <value>digitalproject/model/dsl-model.xml</value>
        <value>digitalproject/model/model.xml</value>
      </list>
    </constructor-arg>
  </bean>

  <bean
    id="digitalproject-viewtester-context"
    class="org.springframework.context.support.ClassPathXmlApplicationContext"
    lazy-init="true">
    <constructor-arg>
      <list>
        <value>org/jspresso/framework/application/commons.xml</value>
        <value>org/jspresso/framework/tools/mock.xml</value>
        <value>org/jspresso/framework/application/frontend/commons-frontend.xml</value>
        <value>org/jspresso/framework/application/frontend/swing/commons-swing.xml</value>
        <value>digitalproject/model/dsl-model.xml</value>
        <value>digitalproject/model/model.xml</value>
        <value>digitalproject/view/dsl-view.xml</value>
        <value>digitalproject/view/view.xml</value>
      </list>
    </constructor-arg>
  </bean>

  <bean
    id="digitalproject-backend-context"
    class="org.springframework.context.support.ClassPathXmlApplicationContext"
    lazy-init="true">
    <constructor-arg>
      <list>
        <value>org/jspresso/framework/application/commons.xml</value>
        <value>org/jspresso/framework/application/backend/persistence/hibernate/commons-hibernate.xml</value>
        <value>digitalproject/model/dsl-model.xml</value>
        <value>digitalproject/model/model.xml</value>
        <value>digitalproject/backend/dsl-backend.xml</value>
        <value>digitalproject/backend/backend.xml</value>
        <value>digitalproject/core-config.xml</value>
      </list>
    </constructor-arg>
  </bean>

  <bean
    id="digitalproject-swing-context"
    class="org.springframework.context.support.ClassPathXmlApplicationContext"
    lazy-init="true">
    <constructor-arg>
      <list>
        <value>org/jspresso/framework/application/commons.xml</value>
        <value>org/jspresso/framework/application/backend/persistence/hibernate/commons-hibernate.xml</value>
        <value>org/jspresso/framework/application/frontend/commons-frontend.xml</value>
        <value>org/jspresso/framework/application/frontend/swing/commons-swing.xml</value>
        <value>digitalproject/model/dsl-model.xml</value>
        <value>digitalproject/model/model.xml</value>
        <value>digitalproject/backend/dsl-backend.xml</value>
        <value>digitalproject/backend/backend.xml</value>
        <value>digitalproject/view/dsl-view.xml</value>
        <value>digitalproject/view/view.xml</value>
        <value>digitalproject/frontend/dsl-frontend.xml</value>
        <value>digitalproject/frontend/frontend.xml</value>
        <value>digitalproject/core-config.xml</value>
        <value>digitalproject/config.xml</value>
      </list>
    </constructor-arg>
  </bean>

  <bean
    id="digitalproject-remote-context"
    class="org.springframework.context.support.ClassPathXmlApplicationContext"
    lazy-init="true">
    <constructor-arg>
      <list>
        <value>org/jspresso/framework/application/commons.xml</value>
        <value>org/jspresso/framework/application/backend/persistence/hibernate/commons-hibernate.xml</value>
        <value>org/jspresso/framework/application/frontend/commons-frontend.xml</value>
        <value>org/jspresso/framework/application/frontend/remote/commons-remote.xml</value>
        <value>digitalproject/model/dsl-model.xml</value>
        <value>digitalproject/model/model.xml</value>
        <value>digitalproject/backend/dsl-backend.xml</value>
        <value>digitalproject/backend/backend.xml</value>
        <value>digitalproject/view/dsl-view.xml</value>
        <value>digitalproject/view/view.xml</value>
        <value>digitalproject/frontend/dsl-frontend.xml</value>
        <value>digitalproject/frontend/frontend.xml</value>
        <value>digitalproject/core-config.xml</value>
        <value>digitalproject/config.xml</value>
      </list>
    </constructor-arg>
  </bean>

  <bean
      id="digitalproject-remote-mobile-context"
      class="org.springframework.context.support.ClassPathXmlApplicationContext"
      lazy-init="true">
    <constructor-arg>
      <list>
        <value>org/jspresso/framework/application/commons.xml</value>
        <value>org/jspresso/framework/application/backend/persistence/hibernate/commons-hibernate.xml</value>
        <value>org/jspresso/framework/application/frontend/commons-frontend.xml</value>
        <value>org/jspresso/framework/application/frontend/remote/commons-remote.xml</value>
        <value>org/jspresso/framework/application/frontend/remote/commons-remote-mobile.xml</value>
        <value>digitalproject/model/dsl-model.xml</value>
        <value>digitalproject/model/model.xml</value>
        <value>digitalproject/backend/dsl-backend.xml</value>
        <value>digitalproject/backend/backend.xml</value>
        <value>digitalproject/spec/mobile-dsl-backend.xml</value>
        <value>digitalproject/backend/mobile-backend.xml</value>
        <value>digitalproject/view/dsl-view.xml</value>
        <value>digitalproject/view/view.xml</value>
        <value>digitalproject/spec/mobile-dsl-view.xml</value>
        <value>digitalproject/view/mobile-view.xml</value>
        <value>digitalproject/frontend/dsl-frontend.xml</value>
        <value>digitalproject/frontend/frontend.xml</value>
        <value>digitalproject/spec/mobile-dsl-frontend.xml</value>
        <value>digitalproject/frontend/mobile-frontend.xml</value>
        <value>digitalproject/core-config.xml</value>
        <value>digitalproject/config.xml</value>
      </list>
    </constructor-arg>
  </bean>

</beans>
